{
  "name": "@ulid/node",
  "version": "0.1.0",
  "description": "Node helper library for @ulid/ulid.",
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "exports": {
    "import": "./esm/index.js",
    "require": "./dist/index.js"
  },
  "types": "./dts/src/index.d.ts",
  "scripts": {
    "build": "npm run build:esm && npm run build:commonjs",
    "build:esm": "esbuild src/index.ts --bundle --platform=neutral --outdir=esm --external:crypto --minify --sourcemap",
    "build:commonjs": "esbuild src/index.ts --bundle --platform=node --outdir=dist --minify --sourcemap"
  },
  "devDependencies": {
    "@types/node": "^18.11.17",
    "typescript": "^4.9.4"
  },
  "author": "Dinislam Tebuev",
  "license": "MIT"
}
