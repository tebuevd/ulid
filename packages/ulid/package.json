{
  "name": "@ulid/ulid",
  "version": "0.1.1-alpha.1.0",
  "description": "ULID generation that works in browsers, backends, and edge runtimes.",
  "main": "./dist/index.js",
  "module": "./esm/index.js",
  "exports": {
    "import": "./esm/index.js",
    "require": "./dist/index.js"
  },
  "types": "./dts/src/index.d.ts",
  "scripts": {
    "build": "npm run build:esm && npm run build:commonjs",
    "build:esm": "esbuild src/index.ts --bundle --platform=neutral --outdir=esm --packages=external --minify --sourcemap",
    "build:commonjs": "esbuild src/index.ts --bundle --platform=node --outdir=dist --packages=external --minify --sourcemap"
  },
  "author": "Dinislam Tebuev",
  "license": "MIT",
  "dependencies": {
    "@ulid/browser": "^0.1.1-alpha.1.0",
    "@ulid/node": "^0.1.1-alpha.1.0",
    "@ulid/shared": "^0.1.1-alpha.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.16.12",
    "typescript": "^4.9.4",
    "ulid": "^2.3.0"
  }
}
