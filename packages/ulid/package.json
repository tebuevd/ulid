{
  "name": "@ulid/ulid",
  "version": "0.1.0",
  "description": "ULID generation that works in browsers, backends, and edge runtimes.",
  "module": "esm/index.js",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tebuevd/ulid"
  },
  "scripts": {
    "check": "tsc --noEmit",
    "build": "npm run build:esm && npm run build:commonjs",
    "build:esm": "tsc --module esnext --outDir esm",
    "build:commonjs": "tsc --module commonjs --outDir dist"
  },
  "author": "Dinislam Tebuev",
  "license": "MIT",
  "dependencies": {
    "@ulid/browser": "^0.1.0",
    "@ulid/node": "^0.1.0",
    "@ulid/shared": "^0.1.0"
  },
  "devDependencies": {
    "typescript": "^4.9.4"
  }
}
